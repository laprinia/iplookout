<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IPSearch">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/looking_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#001815"
            android:textSize="16sp"

            android:textStyle="bold"
            android:text="@string/looking_out_at" />

        <ImageView
            android:id="@+id/flag_img"

            android:layout_width="match_parent"
            android:layout_height="0.1px"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:src="@drawable/search" />

        <TextView
            android:id="@+id/searched_ip_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#046D5F"
            android:textSize="20sp"

            android:textStyle="bold"
            android:layout_weight="2"
             />

        <ListView
            android:id="@+id/ipsearch_lv"
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:layout_weight="9"

            />

        <Button
            android:id="@+id/gmaps_bttn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pin_on_maps" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </LinearLayout>
</FrameLayout>