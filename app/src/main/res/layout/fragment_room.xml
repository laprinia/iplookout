<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RoomFragment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:text="@string/viewing_searched_domains"
        android:textColor="#115E43"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:typeface="monospace"/>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_weight="1"
        android:src="@drawable/domain" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_weight="6">

        <TextView
            android:id="@+id/tv_room"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#A72F27"
            android:textSize="14sp"

            android:textStyle="bold"
            />
    </ScrollView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_weight="2">

        <Button
            android:id="@+id/save_bttn"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/show_string" />

        <Button
            android:id="@+id/clearhistory_bttn"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/clear_history" />
    </GridLayout>
</LinearLayout>